	fgtimer.o fgini.o fggeom.o fgevent.o fgpause.o \
	fgres.res fgrand.o fgpalet.o fgbars.o fgclock.o fgfont.o
RSXLIBDIR=-Ld:/rsxnt/lib
RSXEXE=rsx.exe
WIN32GRC=grc.exe
WIN32RSRC=rsrc.exe
CPP=gcc -E

fgmain.exe: $(MAINOBJS)
	gcc $(CFLAGS) -o fgmain.exe $(MAINOBJS) $(RSXLIBDIR)  -lemx -lbsd 
	$(WIN32RSRC) -DRSX -x -t fgres.res fgmain.exe

